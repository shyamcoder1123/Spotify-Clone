<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.core.widget.NestedScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.SettingsFragment">
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".view.SettingsFragment">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#131313"
                    app:contentInsetStart="0dp"
                    app:layout_scrollFlags="scroll|enterAlways">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Settings"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.appcompat.widget.Toolbar>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="#03A9F4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:fontFamily="@font/gotham_bold"/>
                    </androidx.cardview.widget.CardView>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arjun Kumar"
                            android:textSize="24sp"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/gotham_bold"
                            android:textAlignment="center"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Profile"
                            android:textSize="12sp"
                            android:fontFamily="@font/gotham_bold"
                            android:textAlignment="center"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:textColor="#B1B0B0"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/angle_right"
                        android:layout_marginStart="75dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Free Account"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/gotham_bold"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewGetPremium"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="30dp">
                    <TextView
                        android:id="@+id/getPremiumTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go Premium"
                        android:fontFamily="@font/gotham_bold"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/white"
                        />
                </com.google.android.material.card.MaterialCardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/linear_layout_margin_settings"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:textSize="@dimen/normal_text_size_for_settings_text_view"
                        android:fontFamily="@font/gotham_bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/activity_vertical_margin">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Free plan"
                            android:textSize="@dimen/normal_text_size_for_settings_text_view"
                            android:fontFamily="@font/gotham_medium"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View your plan"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/gotham_medium"
                            android:textColor="#B1B0B0"
                            android:textSize="@dimen/small_text_size_for_settings_text_view"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Saver"
                        android:textSize="@dimen/normal_text_size_for_settings_text_view"
                        android:fontFamily="@font/gotham_bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/linear_layout_margin_settings"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Save Data"
                                android:textSize="@dimen/normal_text_size_for_settings_text_view"
                                android:fontFamily="@font/gotham_medium"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="@string/save_data_sub_text"
                                android:layout_marginTop="4dp"
                                android:textColor="#B1B0B0"
                                android:fontFamily="@font/gotham_medium"
                                android:textSize="@dimen/small_text_size_for_settings_text_view"/>
                        </LinearLayout>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text_size_for_settings_text_view"
                        android:text="Video Podcasts"
                        android:fontFamily="@font/gotham_bold"
                        android:layout_marginTop="@dimen/linear_layout_margin_settings"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Download audio only"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/normal_text_size_for_settings_text_view"
                                android:fontFamily="@font/gotham_medium"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="Save video podcasts as audio only"
                                android:layout_marginTop="4dp"
                                android:textColor="#B1B0B0"
                                android:fontFamily="@font/gotham_medium"
                                android:textSize="@dimen/small_text_size_for_settings_text_view"/>
                        </LinearLayout>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Stream audio only"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/normal_text_size_for_settings_text_view"
                                android:fontFamily="@font/gotham_medium"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="Play video podcasts as audio only when not on wifi."
                                android:layout_marginTop="4dp"
                                android:textColor="#B1B0B0"
                                android:fontFamily="@font/gotham_medium"
                                android:textSize="@dimen/small_text_size_for_settings_text_view"/>
                        </LinearLayout>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text_size_for_settings_text_view"
                        android:text="Video Podcasts"
                        android:fontFamily="@font/gotham_bold"
                        android:layout_marginTop="@dimen/linear_layout_margin_settings"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Download audio only"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/normal_text_size_for_settings_text_view"
                                android:fontFamily="@font/gotham_medium"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="Save video podcasts as audio only"
                                android:layout_marginTop="4dp"
                                android:textColor="#B1B0B0"
                                android:fontFamily="@font/gotham_medium"
                                android:textSize="@dimen/small_text_size_for_settings_text_view"/>
                        </LinearLayout>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Download audio only"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/normal_text_size_for_settings_text_view"
                                android:fontFamily="@font/gotham_medium"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="Save video podcasts as audio only"
                                android:layout_marginTop="4dp"
                                android:textColor="#B1B0B0"
                                android:fontFamily="@font/gotham_medium"
                                android:textSize="@dimen/small_text_size_for_settings_text_view"/>
                        </LinearLayout>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Download audio only"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/normal_text_size_for_settings_text_view"
                                android:fontFamily="@font/gotham_medium"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="Save video podcasts as audio only"
                                android:layout_marginTop="4dp"
                                android:textColor="#B1B0B0"
                                android:fontFamily="@font/gotham_medium"
                                android:textSize="@dimen/small_text_size_for_settings_text_view"/>
                        </LinearLayout>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text_size_for_settings_text_view"
                        android:text="Video Podcasts"
                        android:fontFamily="@font/gotham_bold"
                        android:layout_marginTop="@dimen/linear_layout_margin_settings"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Download audio only"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/normal_text_size_for_settings_text_view"
                                android:fontFamily="@font/gotham_medium"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="Save video podcasts as audio only"
                                android:layout_marginTop="4dp"
                                android:textColor="#B1B0B0"
                                android:fontFamily="@font/gotham_medium"
                                android:textSize="@dimen/small_text_size_for_settings_text_view"/>
                        </LinearLayout>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Download audio only"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/normal_text_size_for_settings_text_view"
                                android:fontFamily="@font/gotham_medium"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="Save video podcasts as audio only"
                                android:layout_marginTop="4dp"
                                android:textColor="#B1B0B0"
                                android:fontFamily="@font/gotham_medium"
                                android:textSize="@dimen/small_text_size_for_settings_text_view"/>
                        </LinearLayout>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Download audio only"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/normal_text_size_for_settings_text_view"
                                android:fontFamily="@font/gotham_medium"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="Save video podcasts as audio only"
                                android:layout_marginTop="4dp"
                                android:textColor="#B1B0B0"
                                android:fontFamily="@font/gotham_medium"
                                android:textSize="@dimen/small_text_size_for_settings_text_view"/>
                        </LinearLayout>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
