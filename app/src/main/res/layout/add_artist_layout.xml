<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/item_selected"
    android:layout_marginRight="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/artistImageLibrary"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="#373737"
                android:background="?android:attr/selectableItemBackground"/>

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_centerInParent="true"
                android:src="@drawable/plus_for_add" />
        </RelativeLayout>
        <TextView
            android:id="@+id/artistNameLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingEnd="20dp"
            android:paddingStart="10dp"
            android:textColor="@color/singer_card_artist_color"
            android:text="Add artists"
            android:textAlignment="center"
            android:fontFamily="@font/gotham_bold"
            android:layout_gravity="center"
            android:textSize="18sp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>