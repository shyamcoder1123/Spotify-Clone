<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="10dp">
    <ImageView
        android:id="@+id/premCardImgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradient_a_b_c"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/premiumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium Name"
            android:fontFamily="@font/gotham_bold"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free"
            android:fontFamily="@font/gotham_bold"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOR 1 MONTH"
            android:fontFamily="@font/gotham_bold"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="55dp"/>
        <TextView
            android:id="@+id/premiumInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            android:fontFamily="@font/gotham_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/viewPlansText"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/premiumInfo"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW PLANS"
                    android:fontFamily="@font/gotham_bold"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/offerValidFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer only for users who are new to Premium"
            android:textColor="#A8A8A8"
            android:textSize="10sp"
            android:fontFamily="@font/gotham_bold"
            app:layout_constraintTop_toBottomOf="@+id/viewPlansText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions apply"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="@font/gotham_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offerValidFor"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>