<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewSpotifyClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1FDF64</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/design_default_color_on_secondary</item>
        <!-- Customize your theme here. -->
        <item name="android:popupBackground">@drawable/custom_menu_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
    </style>

    <style name="FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#1FDF64</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorSecondary">@color/app_color</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/outline_for_comments_fragment</item>
    </style>

